void nStarTriangle(int y) {
    // Write your code here.
     int x=y;
     int a=1;
    for (int i=0;i<y;i++){ //loop for no. of lines 
        for (int j=x-1;j>0;j--){
            cout <<" ";//for space before star
        }
        x--;
        for (int j=0;j<a; j++){
        cout <<"*"; //to print star
        }
        a+=2; // as  no. stars are odd so we have to pluse 2 evry tiem as it is initialized with 1 
        cout<<endl;
    }
}
